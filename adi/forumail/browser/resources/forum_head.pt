<!--
<div tal:content='structure request' />
<div tal:content='python:request["QUERY_STRING"]' /> 
<div tal:content='python:request.form["threaded"]' />
-->
<ul class="head" tal:define="url context/absolute_url; ptype context/portal_type">
    <li>
        <ul class="buttons">
            <li>
                <a class="back"
                   tal:condition="python: ptype != 'Folder'"
                   tal:content="string:&#x21a9;"
                   tal:attributes="href string:{url}/..;
                                   title string:Go back to forum">
                </a>
            </li>
            <li>
                <a class="add"
                   tal:content="string:&#xff0b;"
                   tal:attributes="href view/getAddUrl;
                                   title string:Add a new post">
                </a>
            </li>
        </ul>
        <ul class="sorting">
            <li>
                <ul class="threaded">
                    <li class="listed selected">
                        <a tal:content="string:&#x2630;"
                           tal:attributes="title string:Listed view;
                                           href url;
                                           alt string:Trigramm for heaven">
☰
                        </a>
                    </li>
                    <li class="threaded">
                        <a tal:content="string:&#x2637;"
                           tal:attributes="title string:Treaded view;
                                           href string:${url}?results_type=threaded;
                                           alt string:Trigramm for earth">
☷
                        </a>
                    </li>
                </ul>
                <ul class="categories"
                    tal:define="cats context/Subject"
                    tal:repeat="cat cats">
                    <li>
                        <input type="checkbox"
                               checked="checked"
                               tal:attributes="id string:cat-${cat};" />
                        <label tal:content="cat"
                               tal:attributes="for string:cat-${cat};">
Category
                        </label>
                    </li>
                </ul>
            </li>
        </ul>
    </li>
</ul>

