<div class="head" tal:define="forum_url view/getForumUrl" xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="plone">
    <a class="add" tal:attributes="href view/getAddUrl">
+ Add new post
    </a>
    <div class="sorting">
        <div class="resultsTypes">
            <span i18n:translate="sort_by">
Sort by newest<span class="colon">:</span>
            </span>
            <a class="posts selected" tal:attributes="href forum_url">
Post
            </a>
            <a class="threads" tal:attributes="href string:${forum_url}?results_type=threads">
Thread
            </a>
        </div>
    </div>
</div>

