<?xml version="1.0"?>
<portlets>

 <assignment name="add-post" category="context" key="/forumail"
    manager="ContentWellPortlets.AbovePortletManager3"
    type="plone.portlet.static.Static" visible="True">
  <property
     name="text">&lt;p style="text-align: right; "&gt;&lt;a class="internal-link" href="createObject?type_name=News Item" target="_self"&gt;+ Add a new post&lt;/a&gt;&lt;/p&gt;</property>
  <property name="more_url"/>
  <property name="omit_border">True</property>
  <property name="header">Add post</property>
  <property name="footer"/>
 </assignment>

 <assignment name="reply-to-post" category="content_type" key="News Item"
    manager="ContentWellPortlets.BelowTitlePortletManager3"
    type="collective.portlet.tal.TALPortlet"
    visible="True">
  <property name="tal">&lt;p style="text-align: right;"


    tal:define="portal_state context/@@plone_portal_state;
                context_state context/@@plone_context_state;
                post_id context/id"&gt;

  &lt;a tal:attributes="href string:./createObject?type_name=News Item#${post_id};
                     alt string:Reply to this post;"
                     tal:content="string:&gt;&gt; Reply"
  /&gt;

   &lt;/p&gt;</property>

 </assignment>

</portlets>

